.photo{
  display: block;
  width: 90%; /*避免图像溢出到屏幕之外，是屏幕的90%*/
  margin-left: auto;
  margin-right: auto; /*左右对齐*/
  position: fixed; /*悬挂对齐*/
  bottom: 0; /*距离底端0像素*/
}
.cover-info{
  position: absolute;
  left: 50px;
  top: 20px;
}
.cover-name{
  font-size: 30px;
  font-weight: bold;
  display: block;
  letter-spacing: 1px;
}
.cover-spell{
  font-size: 20px;
  letter-spacing: 1px;
}

/* 气泡控件 */
.big-circle{
  background-color: rgba(0, 165, 34, 0.7);
  width: 260px;
  height: 260px;
  border-radius: 130px;
  position: absolute;
  left: -150px;
  top: 110px;
}
.medium-circle{
  background-color: rgba(0, 165, 34, 0.7);
  width: 160px;
  height: 160px;
  border-radius: 80px;
  position: absolute;
  right: -80px;
  top: 110px;
}
.small-circle{
  background-color: rgba(0, 165, 34, 0.7);
  width: 50px;
  height: 50px;
  border-radius: 25px;
  position: absolute;
  left: -10px;
  bottom: 110px;
}

/* 腰封文字 */
.cover-work{
  position: absolute;
  bottom: 200px;
  text-align: center;
  background-color: rgba(0,0,0,0.2);
  padding: 20px 0;
  width: 100%;
}
.cover-job{
  display: block;
  color: #fff;
  font-size: 30px;
  font-weight: bold;
}
.cover-exp{
  display: block;
  color: #fff;
  font-size: 20px;
}

/* 右上角滑动控件 */
.navigation{
  position: absolute;
  top: 40px;
  right: 10px;
  font-size: 18px;
}
.arrow-right{
  width: 20px;
  height: 20px;
  vertical-align: -5px;
}

/* 详情页 */
.resume{
  margin: 0 20px; /* 左右填充20pix 上下填充0*/

}
.section{
  padding-bottom: 30px; /* 下内填充*/
}
.section-info{
  display: flex;
  border-bottom: 1px solid #333; /** 下边框线 */
  padding-bottom: 5px; /* 下内填充*/
  margin: 10px 0; /*上下外填充10px；左右外填充0px*/
}
.section-seq{
  background-color: #444;
  width: 22px;
  height: 22px;
  color: #fff;
  text-align: center;
  line-height: 22px;
  margin-right: 10px; /* 右填充10px */
  font-weight: bold;
  margin-top: 3px;
}
.section-title{
  font-size: 20px;
}

/* 表格样式 */
.column{
  font-size: 16px;
  border-bottom: 1px dashed  #333;
  padding: 10px 0; /* 上下内填充10px */
  letter-spacing: 1px;
}
.col-2{
  column-count: 2; /* 两列 */
}
.col-1{
  column-count: 1;
}
.info{
  display: block; /* 需要设置block模型 */
}

/*  */
.skill{
  padding: 5px 0; /* 上下内填充*/
}
.skill-name{
  font-size: 16px;
  display: block;
  margin-bottom: 5px; /*下外填充*/
}
.progress{
  
}

/* 教育经历 */
.education,.work,.project,.introduction{
  border-bottom: dashed 1px #999;
  padding: 10px 0;
}
/* education等样式的伪类，最后一块内容之后不用加下划线 */
.education:last-of-type{
  border-bottom:none;
}
.work:last-of-type{
  border-bottom:none;
}
.project:last-of-type{
  border-bottom:none;
}
.introduction:last-of-type{
  border-bottom:none;
}
.school,.company,.project-name{
  font-size: 18px;
  margin-bottom: 10px;
}
.icon-school{
  width: 26px;
  height: 26px;
  vertical-align: -6px; /* 水平方向对齐*/
  margin-right: 5px; /*右外填充*/
}
.row{
  display: flex;
  justify-content: space-between; /* 两端对齐 */
}
.info{
  font-size: 16px;
  margin-bottom: 10px;
}
.icon-book{
  width: 16px;
  height: 16px;
  vertical-align: -2px;
  margin-right: 3px;
}
.icon-calendar{
  width: 17px;
  height: 17px;
  vertical-align: -2px;
  margin-right: 3px;
}
.desc{
  color: #999;
  line-height: 1.5;
}
.page{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 16px;
  padding-bottom: 10px;
}

/* 工作经历 */
.icon-company{
  width: 22px;
  height: 22px;
  vertical-align: -4px;
  margin-right: 5px;
}
.icon-job{
  width: 18px;
  height: 18px;
  vertical-align: -3px;
  margin-right: 3px;
}
.icon-computer{
  width: 26px;
  height: 26px;
  vertical-align: -6px;
  margin-right: 5px;
}